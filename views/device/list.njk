{% extends "layout.njk" %}

{% block pagina %}

  <h1>List Devices</h1>
  <br/>
  <a href="/device/add" class="btn btn-success">Add new device</a>
  <br/>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Data</th>
        <th>Sistema Operacional</th>
        <th>Versão</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {% for info in data %}
        <tr>
          <td>{{info.id}}</td>
          <td>{{info.time}}</td>
          <td>{{info.so}}</td>
          <td>{{info.version}}</td>
          <td>
            <a href="/device/show/{{info.id}}" class="btn btn-primary">Show</a>
            <button class="btn btn-danger"
              onclick="event.preventDefault();
                document.getElementById('logout-form-{{info.id}}').submit();">Delete</button>
          </td>
          <form id="logout-form-{{info.id}}" action="/device/delete/{{info.id}}" method="POST" style="display: none;">
            <input type="hidden" name="_method" value="DELETE" />
          </form>
        </tr>
      {% endfor %}

    </tbody>
  </table>


{% endblock %}
